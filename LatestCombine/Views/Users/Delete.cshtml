@model AspnetCoreMvcFull.Models.ViewModels.UserViewModels

@{
	ViewData["Title"] = "Delete User";
}

<div class="container mx-auto p-4">
	<div class="bg-white shadow-lg rounded-lg p-6 max-w-md mx-auto">
		<h1 class="text-2xl font-bold text-red-700 mb-6">Delete User</h1>
		<p class="text-gray-700 mb-4">Are you sure you want to delete this user?</p>

		<div class="mb-6">
			<dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2">
				<dt class="text-gray-600 font-semibold">@Html.DisplayNameFor(model => model.UserName):</dt>
				<dd class="text-gray-800">@Html.DisplayFor(model => model.UserName)</dd>

				<dt class="text-gray-600 font-semibold">@Html.DisplayNameFor(model => model.Email):</dt>
				<dd class="text-gray-800">@Html.DisplayFor(model => model.Email)</dd>

				<dt class="text-gray-600 font-semibold">@Html.DisplayNameFor(model => model.Roles):</dt>
				<dd class="text-gray-800">@Html.DisplayFor(model => model.Roles)</dd>
			</dl>
		</div>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<div class="flex items-center justify-between">
				<button type="submit" class="btn btn-danger shadow-sm">
					Delete
				</button>
				<a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">
					Back to List
				</a>
			</div>
		</form>
	</div>
</div>
