@page
@model IndexModel
@{
	// Layout is set by _ViewStart.cshtml
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index; // Ensure this is set for nav highlighting
}

<div class="container-fluid mt-4">
	<div class="row">
		
		<div class="col-lg-3 col-md-4 mb-4">
			<h4 class="mb-3 text-primary">Account Settings</h4>
			<partial name="_ManageNav" />
		</div>

		<div class="col-lg-9 col-md-8">
			<h3 class="mb-4 display-6">@ViewData["Title"]</h3>
			<partial name="_StatusMessage" for="StatusMessage" />

			<div class="card shadow-sm border-0 rounded-lg">
				<div class="card-header bg-white border-bottom py-3">
					<h5 class="card-title mb-0">Update Your Profile</h5>
				</div>
				<div class="card-body">
					<form id="profile-form" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

						<div class="mb-3 form-floating form-floating-outline">
							<input asp-for="Username" class="form-control rounded-md" placeholder="Your Username" disabled />
							<label asp-for="Username" class="form-label">Username</label>
						</div>
						<div class="mb-4 form-floating form-floating-outline">
							<input asp-for="Input.PhoneNumber" class="form-control rounded-md" placeholder="e.g., 012-3456789" />
							<label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
							<span asp-validation-for="Input.PhoneNumber" class="text-danger mt-1 d-block"></span>
						</div>
						<button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-2 rounded-md shadow-sm">Save Changes</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
